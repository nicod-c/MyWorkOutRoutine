@model Rutina

@{
    ViewData["Title"] = "Nueva Rutina";
}

<h2 style="text-align: center">Creando nueva rutina para @Model.Cliente.Nombre @Model.Cliente.Apellido</h2>
<br>
@using (@Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(m=>m.fechaInicio)
        @Html.TextBoxFor(m=>m.fechaInicio, new {@class="form-control", type="date"})
        @Html.ValidationMessageFor(m=>m.fechaInicio,"",new { @class = "text-danger" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m=>m.fechaFin)
        @Html.TextBoxFor(m=>m.fechaFin, new {@class="form-control", type="date"})
        @Html.ValidationMessageFor(m=>m.fechaFin,"",new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m=>m.cantDiasporSemana)
        @Html.DropDownListFor(m=>m.cantDiasporSemana,
    new SelectList(ViewBag.cantDiasporSemana),"--Seleccionar Cantidad de d√≠as--",
    new {@class="form-control"})
    </div>


    <input type="submit" name="cancelar" value="Cancelar" class="btn btn-primary" />
    <input type="submit" name="continuar" value="Continuar" class="btn btn-primary" />
}